<% @activities.each do |activity| %>
  <p class="list-group-item-heading lead"><%= time_ago_in_words(activity.created_at) %> ago</p>
    <h4 class="text-group-item-text">
      <%= render_activity activity %>
			<%= link_to activity.owner.fullname, activity.owner if activity.owner %>      
      <%= badging(activity) %>
    </h4>
    <hr>
<% end %>