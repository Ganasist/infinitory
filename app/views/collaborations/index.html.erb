<%- model_class = Collaboration -%>
<div class="page-header">
  <h2><%= @lab.gl.last_name %> lab collaborations</h2><br>
  <%= simple_form_for [@lab, @collaborator], html: { class: 'form-vertical', autocomplete: 'off', style: 'width: 300px' },
                                             url: url_for(action: 'create', controller: 'collaborations'),
                                             method: 'post' do |f| %>
       <%= f.error_notification %>
     
       <%= f.input :lab_email, as: :email, label: "Group leader's email address",
                                placeholder: 'Enter an email',
                                tooltip: ['right', 'This lab must already exist!'] %>

       <%#= f.association :collaborator,  label: 'Enter the email of a group leader',
                                         collection: Lab.all,
                                         value_method: :email,
                                         label_method: :email,
                                         placeholder: 'Lab email address',
                                         tooltip: ['right', 'This lab will only have access to your shared items!'] %>

      <%= f.button :button, class: 'btn-warning' do %>
        <i class="fa fa-link fa-lg"></i> Initiate a collaboration!
        
      <% end %>
    <% end %>
    <br>  
</div>

<div class="span5 text-center">
  <% cache @lab do %>
    <h3 class="text-muted well">Groups that can access your items</h3>
    <h4>
     You share <%= pluralize(@lab.reagents.where(shared: true).count, "reagent") %>
     and <%= pluralize(@lab.devices.where(shared: true).count, "device") %>
   </h4>
  <% end %>
  <br>
  <%= render 'outgoing' %>
  <br>
</div>

<div class="span5 text-center">
  <h3 class="text-muted text-center well">Groups your lab can access</h3>
  <br>
  <%= render 'incoming' %>
  <br>
</div>

 


