    <div class="container marketing">

      <!-- Three columns of text below the carousel -->
      <div class="row" id="why">
        <div class="span4">
          <img class="img-circle" src="../images/petri_organize.jpg">
          <h2 class="text-muted"><%= fa_icon "flask" %> Organize</h2><br>
          <p class="lead">Catalog your reagents</p>
          <p class="lead">Eliminate redundant purchases</p>
          <p class="lead">Get depletion & expiration warnings</p><br>
          <!-- <p><a class="btn" href="#">View details &raquo;</a></p> -->
        </div><!-- /.span4 -->
        <div class="span4">
          <img class="img-circle" src="../images/petri_discover.jpg">
          <h2 class="text-muted"><%= fa_icon "gears" %> Discover</h2><br>
          <p class="lead">Catalog your devices</p>
          <p class="lead">Book and track them online</p>
          <p class="lead">Improve device saturation</p><br>
          <!-- <p><a class="btn" href="#">View details &raquo;</a></p> -->
        </div><!-- /.span4 -->
        <div class="span4">
          <img class="img-circle" src="../images/petri_collaborate.png">
          <h2 class="text-muted"><%= fa_icon "group" %> Collaborate</h2><br>
          <p class="lead">Link to other labs</p>
          <p class="lead">Pool resources efficiently</p>
          <p class="lead">Monitor everything in real time</p><br>
          <!-- <p><a class="btn" href="#">View details &raquo;</a></p> -->
        </div><!-- /.span4 -->
