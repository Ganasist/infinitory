<%- model_class = User -%>
<div class="page-header">

  <h3>
    <% if params[:tag] %>
      <%= "Nearby scientists interested in #{params[:tag]}" %>
    <% else %>
      <%= link_to @lab do %>
       <i class="icon-group"></i><%= " #{@lab.name} lab members" %>
       <% end %>
    <% end %>
  </h3>
</div>

 <% if @approval > 0 && current_user.gl_lm? && current_user.lab_id == @lab.id %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>E-mail</th>
        <% if current_user.gl_lm? && @approval > 0 %>     
          <th>Awaiting authorization</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @approvals.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td>
            <%= link_to 'Click to authorize', active_user_path(user), class: 'btn btn-info' %>
          </td>   
          <% end %>    
        </tr>
    </tbody>
  </table>
<% end %>
<table class="table table-striped">
  <tbody id="approved">      
    <% @users.each do |user| %>
      <tr>
        <td>            
          <% if user.icon.blank? %> 
          <h4 class="text-left">             
              <% if user.gl? %>
                <i class="icon-lightbulb"></i>
              <% elsif user.lm? %>
                <i class="icon-eye-open"></i>
              <% else %>
                <i class="icon-user"></i>
              <% end %>
          </h4>
          <% else %>
            <span class="text-center"><%= link_to image_tag(user.icon_url(:thumb).to_s).html_safe, user %></span>
          <% end %>
        </td>          
        <% if user.fullname.present? %>
          <td><%= link_to user.fullname, user %></td>
        <% else %>
          <td><%= link_to user.id, user %></td>
        <% end %>

        <% if user.gl_lm? %>    
          <td><%= user.gl? ? "Group Leader" : "Lab Manager" %></td>
        <% elsif user.description.present? %>
          <td><%= user.description.humanize %></td>
        <% else %>
          <td></td>
        <% end %>
        <td>Joined <%= time_ago_in_words(user.joined) %> ago</td>   
      </tr>
    <% end %>
  </tbody>
</table>

