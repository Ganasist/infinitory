<%- model_class = User -%>
<div class="page-header">
  <h3>The <%= "#{current_user.lab.name}" %> Lab</h3>
  <% if current_user.department.present? %>
    <h4><%= "#{current_user.department.name}" %></h4>
  <% end %>
  <h5 class="text-muted"><%= "#{current_user.institute.name}" %></h5>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>E-mail</th>
      <th>Role</th>
      <th>Joined</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <% if user.fullname.present? %>
          <td><%= link_to user.fullname, user %></td>
        <% else %>
          <td><%= link_to user.id, user %></td>
        <% end %>
        <td><%= user.email %></td>
        <% if user.description.present? || user.role == "group_leader" %>      
          <td><%= user.role == "group_leader" ? "Group Leader" : user.description.humanize %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= time_ago_in_words(user.created_at) %> ago</td>       
      </tr>
    <% end %>
  </tbody>
</table>