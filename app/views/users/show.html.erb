<%- model_class = User -%>
<% title 'People: ' + @user.fullname %>  
<div class="row">
  <div class="span5">
    <% if @user.icon.present? %>
      <% if @user.icon_processing? %>
        <%= image_tag('/images/ajax-spinner.gif') %>
        <h4>Image processing...</h4>
      <% else %>
      <div class="pull-left user-icon-portrait inline-block">
        <%= image_tag(@user.icon.url, class: "img-rounded").html_safe %>
      </div>
      <% end %>
    <% end %>
    <span class="user inline-block">
      <h3>
        <%= "#{@user.fullname}" %>
        <% if current_user == @user %>
          <small>
            <%= link_to edit_user_registration_path do %>
              <%= fa_icon "edit", title: "Edit", class: "fa-lg fa-fw"  %>
            <% end %>
          </small>
        <% end %>
      <br>
        <% if @user.icon.blank? %>
          <small class="lead">
            <% if @user.gl? %>
              <i class="fa fa-lg fa-lightbulb-o"></i>
            <% elsif @user.lm? %>
              <i class="fa fa-lg fa-eye"></i>
            <% else %>
              <i class="fa fa-lg fa-user"></i>
            <% end %>
            <%= " #{@user.role.humanize}" %>
          </small>
        <% else %>
            <small class="lead">
              <%= " #{@user.role.humanize}" %>
            </small>
          <% end %>
        <br>
        <small class="lead"><%= @user.cached_total_points %> pts</small>  
        
        <ul class="inline">
          <br>
          <% if current_user.email.present? %>
          <li>          
            <%= mail_to current_user.email do %>
              <%= fa_icon "envelope-o", title: "Email", class: "fa-lg fa-fw"  %>
            <% end %>
          </li>
          <% end %>

          <% if current_user.linkedin_url.present? %>
           <li>          
            <%= link_to current_user.linkedin_url, target: "_blank"  do %>
              <%= fa_icon "linkedin", title: "LinkedIn", class: "fa-lg fa-fw" %>
            <% end %>
          </li>          
          <% end %>

          <% if current_user.twitter_url.present? %>
           <li>          
            <%= link_to current_user.twitter_url, target: "_blank"  do %>
              <%= fa_icon "twitter", title: "Twitter", class: "fa-lg fa-fw" %>
            <% end %>
          </li>          
          <% end %>

          <% if current_user.facebook_url.present? %>
           <li>          
            <%= link_to current_user.facebook_url, target: "_blank"  do %>
              <%= fa_icon "facebook", title: "Facebook", class: "fa-lg fa-fw" %>
            <% end %>
          </li>          
          <% end %>  

          <% if current_user.google_plus_url.present? %>
           <li>
            <%= link_to current_user.google_plus_url, target: "_blank" do %>
              <%= fa_icon "google-plus", title: "Google+", class: "fa-lg fa-fw" %>
            <% end %>
          </li>          
          <% end %>          
        </ul>
        <dl class="dl-horizontal">
        <hr>        
          <h5>
            <%= link_to @user.lab, class: "inline-block" do %>
            <i class="fa fa-fw fa-lg fa-users"></i><%= " The #{@user.lab.gl.fullname} lab" %>
            <% end %>
          </h5>
          <% if @user.department.present? %>
          <h5>
            <%= link_to institute_department_path(@user.institute, @user.department) do %>
            <i class="fa fa-fw fa-lg fa-sitemap"></i><%= " #{@user.department.name}" %>
            <% end %>
          </h5>
          <% end %>
          <h5>
            <%= link_to @user.institute do %>
            <i class="fa fa-fw fa-lg fa-building-o"></i><%= " #{@user.institute.name}" %>
            <% end %>
          </h5>
        </dl>
        <hr>
      </h3>
      <% if @user.pdf? %>
          <h4>Attachments</h4>
          <h5><%= link_to "#{ @user.pdf_file_name }",@user.pdf.url %> - updated <%= time_ago_in_words(@user.pdf_updated_at) %> ago</h5>
          <hr>
        <% end %>
    </span>
  </div>
  <div class="span7 inline-block">
    <!-- Nav panes -->
    <ul class="nav nav-pills nav-justified">
      <li class="active"><a href="#notifications" data-toggle="pill">Notifications</a></li>
      <li><a href="#activity" data-toggle="pill">Activity</a></li>
      <li class="disabled"><a href="#messages" data-toggle="pill">Messages</a></li>
    </ul><br>
    <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane fade in active" id="notifications">
        
        <div id="paginator-notifications-top">
          <%= paginate @notifications, remote: true, theme: 'twitter-bootstrap' %>
        </div>

        <div id="notifications">
          <%= render 'notifications' %>
        </div>

        <div id="paginator-notifications-bottom">
          <%= paginate @notifications, remote: true, theme: 'twitter-bootstrap' %>
        </div>
      </div>

      <div class="tab-pane fade" id="activity">
        
        <div id="paginator-activities-top">
          <%= paginate @activities, remote: true, theme: 'twitter-bootstrap' %>
        </div>

        <div id="activities">
          <%= render 'activities' %>
        </div>

        <div id="paginator-activities-bottom">
          <%= paginate @activities, remote: true, theme: 'twitter-bootstrap' %>
        </div>

      </div>
      <div class="tab-pane fade" id="messages">

      </div>
    </div>
  </div>
</div>

