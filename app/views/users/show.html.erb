<%- model_class = User -%>
<div class="page-header">
  <h3><%= @user.fullname.blank? ? "User #{@user.email}" : "#{@user.fullname}" %>
  
      <% if current_user == @user %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_user_registration_path, :class => 'btn-small btn-success' %>

      <% end %>
      <br>
      <% if @user.gl_lm? %>
        <small class="lead"><%= @user.gl? ? "Group Leader" : "Lab Manager" %></small>
      <% elsif @user.description.present? %>
        <small class="lead"><%= "#{@user.description.humanize}" %></small>
      <% end %>
  </h3>

    
</div>

<dl class="dl-horizontal">
  <h5><%= link_to "The #{@lab.name} lab", @lab %></h5>
  <% if @department.present? %>
    <h5><%= link_to "#{@department.name}", @department %></h5>
  <% end %>
  <h5 class="text-muted"><%= link_to "#{@institute.name}", @institute %></h5>
</dl>