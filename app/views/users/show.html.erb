<%- model_class = User -%>
<% title 'People: ' + @user.fullname %>
  
<div class="row">
  <div class="span6">
  <h3>
    <% if false %>
      <% if @user.icon.present? %>
        <div class="pull-left user-icon-portrait">
            <%= image_tag(@user.icon_url(:portrait).to_s, class: "img-rounded").html_safe %>
        </div>
      <% end %>
    <% end %>
    <span class="inline-block">
      <%= "#{@user.fullname}" %>
    <br>
      <% if @user.icon.blank? %>
        <small class="lead">
          <% if @user.gl? %>
            <i class="fa fa-lg fa-lightbulb-o"></i>
          <% elsif @user.lm? %>
            <i class="fa fa-lg fa-eye"></i>
          <% else %>
            <i class="fa fa-lg fa-user"></i>
          <% end %>
          <%= " #{@user.role.humanize}" %>
        </small>
      <% else %>
          <small class="lead">
            <%= " #{@user.role.humanize}" %>
          </small>
        <% end %>
        <% if current_user == @user %>
          <%= link_to t('.edit', :default => t('helpers.links.edit')),
                      edit_user_registration_path, class: 'fa fa-edit btn btn-warning' %>
        <% end %>
        <br>
        <small class="lead"><%= @user.points %> pts</small>
      </span>
      <dl class="dl-horizontal">
      <h5>
        <%= link_to @lab, class: "inline-block" do %>
          <i class="fa fa-fw fa-lg fa-users"></i><%= " The #{@lab.gl.fullname} lab" %>
        <% end %>
      </h5>
      <% if @department.present? %>
        <h5>
          <%= link_to institute_department_path(@institute, @department) do %>
            <i class="fa fa-fw fa-lg fa-sitemap"></i><%= " #{@user.department.name}" %>
          <% end %>
        </h5>
      <% end %>
      <h5>
        <%= link_to @institute do %>
          <i class="fa fa-fw fa-lg fa-building-o"></i><%= " #{@user.institute.name}" %>
        <% end %>
      </h5>
    </dl>
  </h3>
    <% if current_user == @user %>
      <%= link_to " Feedback", new_message_path, class: 'fa fa-bullhorn btn btn-warning' %>
      <%= link_to " Invitations", new_user_invitation_path, class: 'fa fa-thumbs-o-up btn btn-warning' %>
    <% end %>
  <hr>
   <!-- <span id="calendar_view"></span>     -->
  <%= render 'notifications' %>   
  </div>
  <div class="span6 pull-left">
    <%= render 'activities' %>
  </div>
</div>

