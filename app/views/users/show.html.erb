<%- model_class = User -%>
<div class="page-header">
  <h3>
    <div class="row">
      <div class="span2">
        <% if @user.icon %>
          <%= image_tag(@user.icon_url(:thumb).to_s).html_safe %>      
        <% elsif @user.gl_lm? %>
          <i class="icon-eye-open"><%= @user.fullname.blank? ? "User #{@user.email}" : "#{@user.fullname}" %>
        <% else %>
          <i class="icon-user"><%= @user.fullname.blank? ? "User #{@user.email}" : "#{@user.fullname}" %>
        <% end %>
      </div>  
      <div class="span3">
        <%= @user.fullname.blank? ? "User #{@user.email}" : "#{@user.fullname}" %>
            <% if @user.gl_lm? %>
              <br>
              <small class="lead"></i><%= @user.gl? ? " Group Leader" : " Lab Manager" %></small>
            <% elsif @user.description.present? %>
              <small class="lead"></i><%= " #{@user.description.humanize}" %></small>
            <% end %>
    
        <% if current_user == @user %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_user_registration_path, :class => 'btn-mini btn-success' %>
        <% end %>
      </div>
    </div>   
  </h3>   
    
</div>

<dl class="dl-horizontal">
  <h5>
    <%= link_to @lab do %>
      <i class="icon-group"></i><%= " The #{@lab.name} lab" %>
    <% end %>
  </h5>
  
  <% if @department.present? %>
    <h5>
      <%= link_to @department do %>
        <i class="icon-sitemap"></i><%= " #{@department.name}" %>
      <% end %>
    </h5>
  <% end %>

  <h5>
    <%= link_to @institute do %>
      <i class="icon-building"></i><%= " #{@institute.name}" %>
    <% end %>
  </h5>
</dl>
