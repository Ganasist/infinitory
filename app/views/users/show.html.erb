<%- model_class = User -%>
<div class="page-header">
  <h3><%= @user.fullname.blank? ? "User #{@user.email}" : "#{@user.fullname}" %>
  
      <% if current_user == @user %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_user_registration_path, :class => 'btn-small btn-success' %>

      <% end %>
      <br>
      <% if @user.gl_lm? %>
        <small class="lead"><i class="icon-eye-open"></i><%= @user.gl? ? " Group Leader" : " Lab Manager" %></small>
      <% elsif @user.description.present? %>
        <small class="lead"><i class="icon-user"></i><%= " #{@user.description.humanize}" %></small>
      <% end %>
  </h3>

    
</div>

<dl class="dl-horizontal">
  <h5>
    <%= link_to @lab do %>
      <i class="icon-group"></i><%= " The #{@lab.name} lab" %>
    <% end %>
  </h5>
  
  <% if @department.present? %>
    <h5>
      <%= link_to @department do %>
        <i class="icon-sitemap"></i><%= " #{@department.name}" %>
      <% end %>
    </h5>
  <% end %>

  <h5>
    <%= link_to @institute do %>
      <i class="icon-building"></i><%= " #{@institute.name}" %>
    <% end %>
  </h5>
</dl>
