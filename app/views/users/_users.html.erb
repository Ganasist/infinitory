<% cache @users do %>
  <table class="table">
    <tbody id="approved">      
      <% @users.each do |user| %>
        <tr>
          <td>            
            <% if user.icon.blank? %> 
            <h4 class="text-left"> 
              <%= fa_icon "lightbulb", class: "fa-lg fa-fw" if user.gl? %>
              <%= fa_icon "eye", class: "fa-lg fa-fw" if user.lm? %>
              <%= fa_icon "user", class: "fa-lg fa-fw" if !user.gl_lm? %>
            </h4>
            <% else %>
              <span class="text-center"><%= link_to image_tag(user.icon.url(:thumb), class: "img-rounded").html_safe, user %></span>
            <% end %>
          </td>
          <td><%= link_to user.fullname, user %> <%= number_with_delimiter(user.points) %></td>
          <% if user.role.present? %>
            <td><%= user.role.humanize %></td>
          <% else %>
            <td></td>
          <% end %>
          <% if user.joined %>
            <td>Joined <%= time_ago_in_words(user.joined) %> ago</td> 
          <% end %>

          <% if current_user.retire_permissions?(user, @lab) %>
            <td>
              <%= link_to '  Retire', retire_user_path(user),
                                      data: { confirm: "Are you sure you want to retire #{user.fullname}? He/she will be unlinked from everything in the lab." },
                                      class: 'btn btn-info fa fa-chain-broken fa-lg' %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>