<div id="push">
  <% if user_signed_in? %>

      <%= nav_bar brand: "INFINITORY", brand_link: user_path(current_user), responsive: false do %>
        <% if current_user.lab.present? %>
          <%= menu_group do %>
            <%= menu_item " Sign-out", destroy_user_session_path, method: :delete, class: "fa fa-sign-out", id: "sign-out" %>
          <% end %>
        <% end %>
        <%= menu_group pull: :right do %>
          <%= link_to current_user.lab, class: "inline-block" do %>
            <%= fa_icon "users", class: "fa-2x fa-fw"  %> <small>(<%= current_user.lab.users.size %>)</small>
          <% end %>
          <% if current_user.reagents.count > 0 %>
            <%= link_to user_reagents_path(current_user), class: "inline-block" do %>
              <%= fa_icon "flask", class: "fa-2x fa-fw"  %> <small>(<%= current_user.cached_reagent_count %>)</small>
            <% end %>
          <% end %>
          <% if current_user.devices.count > 0 %>
            <%= link_to user_devices_path(current_user), class: "inline-block" do %>
              <%= fa_icon "cogs", class: "fa-2x fa-fw" %> <small>(<%= current_user.cached_device_count %>)</small>
            <% end %>
          <% end %>
            <%= link_to '#', class: "inline-block" do %>
              <%= fa_icon "calendar", class: "fa-2x fa-fw"  %> <small>(<%= current_user.cached_device_count %>)</small>
            <% end %>          
        <% end %>
      <% end %>

  <% else %>
    <%= nav_bar brand: 'INFINITORY', brand_link: root_path, responsive: false do %>
      <%= menu_group pull: :right do %>
        <%= drop_down 'SIGN-IN' do %>
          <%= simple_form_for('user', url: new_user_session_path,
                                      defaults: { input_html: { style: 'width: 210px' } }) do |f| %>        
            <div class="splash form-inputs">
              <%= f.input :email, required: false, autofocus: true %>
              <%= f.input :password, required: false %>
            </div>
            <div class="splash form-inputs">
              <%= f.button :submit, 'Sign in', class: 'btn-warning'   %><br><br>
              <%= link_to 'Forgot your password?', new_password_path('user') %>
            </div>
          <% end %>
        <% end %>
      <% end %>   
    <% end %>
  <% end %>
</div>