<div id="push">
  <% if user_signed_in? %>
    <%= nav_bar brand: "INFINITORY", brand_link: user_path(current_user), responsive: false do %>
      <%= menu_group do %>        
            <%= menu_item " Sign-out #{current_user.fullname}", destroy_user_session_path, :method => :delete ,
                            class: "icon-signout" %>
      <% end %>
    <%= form_tag institutes_path, method: :get do %>
        <%= text_field_tag :query, params[:query], class: "navbar-search pull-right", placeholder: "Search"  %>
    <% end %>
    <% end %>
  <% else %>
    <%= nav_bar brand: "INFINITORY", brand_link: root_path, responsive: false do %>
      <%= menu_group pull: :right do %>
        <%= drop_down "SIGN-IN" do %>
          <%= simple_form_for("user", :url => new_user_session_path) do |f| %>        
            <div class="splash form-inputs">
              <%= f.input :email, :required => false, :autofocus => true %>
              <%= f.input :password, :required => false %>
            </div>
            <div class="splash form-actions">
              <%= f.button :submit, "Sign in", class: "btn-primary"   %><br><br>
              <%= link_to "Forgot your password?", new_password_path('user') %>
            </div>
          <% end %>
        <% end %>
      <% end %>   
    <% end %>
  <% end %>
</div>