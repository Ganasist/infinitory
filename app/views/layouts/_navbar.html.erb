<div id="push">
  <% if user_signed_in? %>
    <%= nav_bar brand: 'INFINITORY', brand_link: user_path(current_user), responsive: false, class: 'inactive' do %>
      <% if current_user.lab.present? %>
        <%= menu_group do %>
          <%= link_to current_user.lab, class: 'btn-large btn-warning' do %>
            <i class="icon-group"> <small>(<%= current_user.lab.users.length %>)</small></i>
          <% end %>        
          <%= link_to user_reagents_path(current_user), class: 'btn-large btn-warning' do %>
            <i class="icon-beaker"> <small>(<%= current_user.reagents.length %>)</small></i>
          <% end %>
          <%= link_to user_devices_path(current_user), class: 'btn-large btn-warning' do %>
            <i class="icon-cogs"> <small>(<%= current_user.devices.length %>)</small></i>
          <% end %>
        <% end %>
      <% end %>
      <%= menu_group pull: :right do %>
        <%= menu_group do %>
              <%= menu_item " Invite a scientist", new_user_invitation_path, class: "icon-link", id: "invitation" %>       
              <%= menu_item " Sign-out", destroy_user_session_path, method: :delete, class: "icon-signout" %>
        <% end %>        
      <% end %>
    <% end %>
  <% else %>
    <%= nav_bar brand: 'INFINITORY', brand_link: root_path, responsive: false do %>
      <%= menu_group pull: :right do %>
        <%= drop_down 'SIGN-IN' do %>
          <%= simple_form_for('user', url: new_user_session_path,
                                      defaults: { input_html: { style: 'width: 200px' } }) do |f| %>        
            <div class="splash form-inputs">
              <%= f.input :email, required: false, autofocus: true %>
              <%= f.input :password, required: false %>
            </div>
            <div class="splash form-inputs">
              <%= f.button :submit, 'Sign in', class: 'btn-primary'   %><br><br>
              <%= link_to 'Forgot your password?', new_password_path('user') %>
            </div>
          <% end %>
        <% end %>
      <% end %>   
    <% end %>
  <% end %>
</div>