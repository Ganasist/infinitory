<div id="push">
  <% if user_signed_in? %>
    <%= nav_bar brand: 'INFINITORY', brand_link: user_path(current_user), responsive: false do %>
      <%= menu_group do %>        
            <%= menu_item " Sign-out #{current_user.fullname}", destroy_user_session_path, method: :delete ,
                            class: "icon-signout" %>
      <% end %>
      <%= menu_group pull: :right do %>
        <%= link_to current_user, class: 'btn-large btn-warning' do %>
          <i class="icon-user"></i>
        <% end %>
        <% if current_user.lab %>
          <%= link_to current_user.lab, class: 'btn-large btn-warning' do %>
            <i class="icon-group"> <small>(<%= current_user.lab.users.size %>)</small></i>
          <% end %>        
          <%= link_to user_reagents_path(current_user), class: 'btn-large btn-warning' do %>
            <i class="icon-beaker"> <small>(<%= current_user.reagents.size %>)</small></i>
          <% end %>
          <%= link_to '#', class: 'btn-large btn-warning' do %>
            <i class="icon-cogs"></i>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% else %>
    <%= nav_bar brand: 'INFINITORY', brand_link: root_path, responsive: false do %>
      <%= menu_group pull: :right do %>
        <%= drop_down 'SIGN-IN' do %>
          <%= simple_form_for('user', url: new_user_session_path) do |f| %>        
            <div class="splash form-inputs">
              <%= f.input :email, required: false, autofocus: true %>
              <%= f.input :password, required: false %>
            </div>
            <div class="splash form-actions">
              <%= f.button :submit, 'Sign in', class: 'btn-primary'   %><br><br>
              <%= link_to 'Forgot your password?', new_password_path('user') %>
            </div>
          <% end %>
        <% end %>
      <% end %>   
    <% end %>
  <% end %>
</div>