<h4>History</h4><br>
<% @activities.each do |activity| %>
  <h4 class="list-group-item-heading"><%= time_ago_in_words(activity.created_at) %> ago</h4>
    <p class="text-group-item-text">
      <%= link_to activity.owner.fullname, activity.owner if activity.owner %> -
      <%= render_activity activity %> <%= badging(activity) %>
    </p>
<% end %>