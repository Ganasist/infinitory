<% title " Institutes: " + @institute.name %>

<%= render "header" %>

<div class="span5">
  
  <%= render 'info' %>

  <% if @institute.departments.present? %>
	  <%= render 'department' %>
  <% else %>
    <%= link_to "Add Department", new_institute_department_path(@institute), class: 'btn-large btn-warning' %>

    <% if @institute.labs.present? %>
      <%= render 'lab' %>
    <% end %>

  <% end %>
</div>
