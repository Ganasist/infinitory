<% cache @departments do %>
<hr>           
	<h4><i class="icon-sitemap"></i><%= link_to " Departments", institute_departments_path(@institute) %></h4>
	<br>
	    <% @departments.each do |department| %>
	    <div class="department">
	    <p><%= link_to department.name, department_path(department) %></p>
	    </div>
	  <% end %>
	  <br>
    <%= link_to "Add Department", new_institute_department_path(@institute), :class => 'btn-large' %>      
<% end %>
