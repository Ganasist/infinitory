  <div class="page-header">
      <h3><i class="icon-building"></i>        
        <%= " #{@institute.name}" %>
        <% if @institute.acronym.present? %>
          (<%= "#{@institute.acronym}" %>)
        <% end %>
        <% if user_signed_in? && current_user.gl? && current_user.institute == @institute %>
          <div class="btn-group">
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_institute_path(@institute), class: 'btn btn-warning' %>
          </div>
        <% end %>
      </h3>
      
      <% if @institute.alternate_name.present? %>
        <h4 class="text-muted">
          <%= "#{@institute.alternate_name}" %></dd>
        <br>
        </h4>
      <% end %>

      <h4><%= pluralize(@institute.labs.size, "group") + " & " + pluralize(@institute.users.size, "member") %></h4>
               
  </div>