<% cache @institute do %>
  <div class="page-header">
      <h3><i class="icon-home"></i>        
        <%= " #{@institute.name}" %>
        <% if @institute.acronym.present? %>
          (<%= "#{@institute.acronym}" %>)
        <% end %>
      <% if current_user.gl? && current_user.institute == @institute %>
        <div class="btn-group">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_institute_path(@institute), :class => 'btn-small btn-success' %>
        </div>
      <% end %>
      </h3>
      
      <% if @institute.alternate_name.present? %>
        <h4 class="text-muted">
          <%= "#{@institute.alternate_name}" %></dd>
        <br>
        </h4>
      <% end %>
      <br>
      
  </div>
<% end %>