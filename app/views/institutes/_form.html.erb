<%= simple_form_for @institute, :html => { :class => 'form-inline' } do |f| %>
  <%= f.input :name, label: "Institute name" %>
  <%= f.input :address, :input_html => { :cols => 50, :rows => 5 } %>
  <%= f.input :url, label: 'Website', placeholder: "Optional" %>
  <%= f.input :acronym, placeholder: "Optional" %>
  <%= f.input :alternate_name, placeholder: "Optional" %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              institutes_path, :class => 'btn' %>

<% end %>
