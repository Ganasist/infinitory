<%= simple_form_for @institute, :html => { :class => 'form-inline', multipart: true } do |f| %>
  <%= f.input :name, input_html: { style: 'width: 350px'}, label: "Institute name" %>
  <%= f.input :alternate_name, input_html: {:style=> 'width: 350px'}, placeholder: "Optional" %>
  <%= f.input :acronym, input_html: {:style=> 'width: 350px'}, placeholder: "Optional", label: "Acronym" %>
  <%= f.input :address, :input_html => { style: 'width: 350px', rows: 4 }, as: :text %>
  <%= f.input :url, input_html: {:style=> 'width: 350px'}, label: 'Website', placeholder: "Optional" %>
  
  <label>Logo</label><br>
  <% if @institute.icon? %>
    <%= image_tag(@institute.icon_url(:main)) %><br><br>
  <% end %>
  <%= f.input :remote_icon_url, placeholder: "Enter image URL", label: false %>
  <h4>or</h4>
  <%= f.input :icon, label: false %>  
  <%= f.hidden_field :icon_cache %>
 
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                institute_path(@institute), :class => 'btn' %>
<% end %>
