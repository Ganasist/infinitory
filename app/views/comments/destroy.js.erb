$(document).ajaxStart ->
	$('#<%= @comment.id %>').children().css( "color", "#bc0303" ).css( "font-weight", "bold");
	$('#<%= @comment.id %>').fadeOut(2000);
  $("spinner-<%= @comment.id %>").show()
  return

$(document).ajaxStop ->
  $("spinner-<%= @comment.id %>").hide()
  return


