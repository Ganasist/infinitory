<%- model_class = Reagent -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Location</th>
      <% if params[:tag] %>
        <th><%= model_class.human_attribute_name(:tags) %></th>
      <% end %>
      <th>Expiration</th>
      <th>Last Update</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @reagents.each do |reagent| %>
      <tr>
        <td>
          <%= fa_icon "paperclip", title: "Attachment" if reagent.pdf.present? %>
          <%= fa_icon "camera-retro", title: "Image" if reagent.icon.present? %>         
          <% if low?(reagent) %>
            <%= link_to "#{fullname(reagent)} #{reagent.remaining}%", reagent_path(reagent), class: "text-warning" %>            
          <% elsif almost_empty?(reagent) %>
            <%= link_to "#{fullname(reagent)} #{reagent.remaining}%", reagent_path(reagent), class: "text-danger" %>
          <% else %>
            <%= link_to "#{fullname(reagent)} #{reagent.remaining}%", reagent_path(reagent) %>
          <% end %>
        </td>
        <td><%= reagent.category.titleize %></td>  
        <td><%= reagent.location %></td>
        <% if reagent.expiration? %>
          <% if reagent.expiration.past? %>
            <td><span class="text-danger"><%= "#{time_ago_in_words(reagent.expiration)}" %> ago</span></dd>
          <% elsif expiring?(reagent) %>    
            <td><span class="text-warning"><%= time_ago_in_words(reagent.expiration) %> from now</span></dd>
          <% else %>
            <td>in <%= time_ago_in_words(reagent.expiration) %></dd>
          <% end %>
        <% end %>

        <td><%= time_ago_in_words(reagent.updated_at) %> ago</td>
        <td>
          <%= link_to edit_reagent_path(reagent) do %>
            <%= fa_icon "edit", class: "fa-lg fa-fw", title: "Edit"  %>
          <% end %>

          <%= link_to reagent_path(reagent),
                      method: :delete, 
                      confirm: "Are you sure you want to delete this?" do %>
            <%= fa_icon "trash-o", class: "fa-lg fa-fw", title: "Delete"  %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>