<%- model_class = Reagent -%>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Expiration</th>
      <th>Location</th>
      <% if params[:tag] %>
        <th><%= model_class.human_attribute_name(:tags) %></th>
      <% end %>
      <th>Updated</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @reagents.each do |reagent| %>
      <tr>
        <% if low?(reagent) %>
          <td><%= link_to "#{reagent.name} #{reagent.remaining}%", reagent_path(reagent) %> <span class="label label-warning">Low</span></td>
        <% elsif almost_empty?(reagent) %>
          <td><%= link_to "#{reagent.name} #{reagent.remaining}%", reagent_path(reagent) %> <span class="label label-important">Low</span></td>
        <% else %>
          <td>
            <%= link_to "#{reagent.name} #{reagent.remaining}%", reagent_path(reagent) %><br>
          </td>
        <% end %>

        <td><%= reagent.category.titleize %></td> 

        <% if reagent.expiration.past? %>
          <td><span class="label label-important"><%= "#{time_ago_in_words(reagent.expiration)}" %> ago</span></dd>
        <% elsif expiring?(reagent) %>    
          <td><span class="label label-warning"><%= time_ago_in_words(reagent.expiration) %> from now</dd>
        <% else %>
          <td>in <%= time_ago_in_words(reagent.expiration) %></dd>
        <% end %>

        <td><%= reagent.location %></td>

        <% if params[:tag] %>
          <td><%= raw reagent.tag_list.map { |t| link_to t, tag_path(t) }.join(' ') %></td>
        <% end %>

        <td><%= time_ago_in_words(reagent.updated_at) %> ago</td>
        <td>
          <%= link_to t('.edit', default: t("helpers.links.edit")),
                      edit_reagent_path(reagent), class: 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>