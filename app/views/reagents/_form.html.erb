<%= simple_form_for [@lab, @reagent], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :category %>
  <%= f.input :owner %>
  <%= f.input :location %>
  <%= f.input :price %>
  <%= f.input :serial %>
  <%= f.input :quantity %>
  <%= f.input :description %>
  <%= f.input :expiration %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lab_reagents_path(@lab), :class => 'btn' %>
  </div>
<% end %>
