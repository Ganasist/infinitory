<%- model_class = Reagent -%>
<div class="page-header">
  <h3><%= @lab.name %> Lab Reagents <%= @lab.reagents.count %></h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:owner) %></th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:serial) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:properties) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @reagents.each do |reagent| %>
      <tr>
        <td><%= link_to reagent.id, reagent_path(reagent) %></td>
        <td><%= reagent.name %></td>
        <td><%= reagent.category %></td>
        <td><%= reagent.owner %></td>
        <td><%= reagent.location %></td>
        <td><%= reagent.price %></td>
        <td><%= reagent.serial %></td>
        <td><%= reagent.quantity %></td>
        <td><%= reagent.properties %></td>
        <td><%=l reagent.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_reagent_path(reagent), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      reagent_path(reagent),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lab_reagent_path(@lab),
            :class => 'btn btn-primary' %>
