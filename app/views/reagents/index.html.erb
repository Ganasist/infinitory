<%- model_class = Reagent -%>
<div class="row">
  <div class="span6">
    <% if @lab %>
      <h4>The <%= link_to "#{@lab.gl.fullname} Lab's", @lab %> reagents</h4>  
    <% elsif params[:user_id].present? %>        
      <h3>My reagents</h3>
      <p><%= link_to "My lab's reagents", lab_reagents_path(current_user.lab) %></p>
    <% end %>

    <% if params[:tag] %>
      <h3>Reagents tagged with <%= "#{params[:tag]}" %></h3>
    <% end %>

  <% if params[:user_id].present? %>
    <%= form_tag user_reagents_path(current_user.lab), method: :get do %>
      <%= text_field_tag :search, params[:query],
                                  class: "search-field", 
                                  placeholder: "Search by name, tag, UID or serial" %>
    <% end %>
  <% elsif params[:lab_id].present? %>
    <%= form_tag lab_reagents_path, method: :get do %>
      <%= text_field_tag :search, params[:query],
                                  class: "search-field",
                                  placeholder: "Search by name, tag, UID or serial"  %>
      <%= select_tag(:reagent_search_scope, options_for_select([['Lab', 1], ['+ Institute', 2], ['+ Local institutes', 3]])) %>
    <% end %>
  <% end %>

  <%= link_to " Add reagent", new_lab_reagent_path(current_user.lab), class: 'fa fa-plus-square btn btn-warning' %>
<br><br>
</div>
  <div class="span5 pull-right">
    <div id='chart'></div>
      <%= render_chart(@chart, 'chart') %>
  </div>
</div>
<br><br>
<%= render 'reagents' %>
<%= will_paginate @reagents, class: 'text-center lead' %>