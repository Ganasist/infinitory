<%- model_class = Reagent -%>
<div class="page-header">
  <% if @lab %>
  <h4><%= link_to "#{@lab.name} Lab:", @lab %> <%= pluralize(@lab.reagents.count, 'reagent') %></h4>
  <% end %>
  <% if params[:tag] %>
    <h3>Reagents tagged with <%= "#{params[:tag]}" %></h3>
  <% end %>
</div>

<% if !params[:tag].present? %>
  <%= form_tag lab_reagents_path, method: :get do %>
    <%= text_field_tag :search, params[:query], class: "navbar-search", placeholder: "Search Reagents"  %>
  <% end %>
<% end %>
<br><br><br>
<% if @lab %>
  <%= link_to "Add new reagent",
              new_lab_reagent_path(@lab),
              :class => 'btn btn-success' %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th>% Remaining</th>
      <th><%= model_class.human_attribute_name(:location) %></th>
      <% if params[:tag] %>
        <th><%= model_class.human_attribute_name(:tags) %></th>
      <% end %>
      <th>Updated</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @reagents.each do |reagent| %>
      <tr>
        <td><%= link_to reagent.name, reagent_path(reagent) %></td>
        <td><%= reagent.category.titleize %></td>
        <td><%= reagent.remaining %></td>
        <td><%= reagent.location %></td>
        <% if params[:tag] %>
          <td><%= raw reagent.tag_list.map { |t| link_to t, tag_path(t) }.join(' ') %></td>
        <% end %>
        <td><%= time_ago_in_words(reagent.updated_at) %> ago</td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_reagent_path(reagent), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h4 class="text-center">
  <% if @reagents.previous_page %>
    <%= link_to "< Previous ", params.merge(page: @reagents.previous_page) %>
  <% end %>
  Page <%= @reagents.current_page %> of <%= @reagents.total_pages %>
  <% if @reagents.next_page %>
    <%= link_to " Next >", params.merge(page: @reagents.next_page) %>
  <% end %>
  </div>
</h4>
