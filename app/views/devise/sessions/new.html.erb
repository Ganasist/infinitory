<span class="text-center">
	<h2>Sign-in</h2>
</span>
<br>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-inline' }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true, input_html: { style: 'width: 350px'} %>
    <%= f.input :password, :required => false, input_html: { style: 'width: 350px'} %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


