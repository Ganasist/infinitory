<span class="text-center">
	<h2>Registration</h2>
</span>
<br>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
                              html: { class: 'form-inline register', autocomplete: 'off' } ) do |f| %>
<%= f.error_notification %>
<div class="span5">
  <div class="form-inputs">
      <%= f.collection_select :role, User::ROLES, :to_s, :humanize, prompt: 'Choose your position' %>
      <br>
      <div id="GL_INFO">
        <h4 class="lead">Signing up as a Group Leader will automatically create a Lab Account that will be linked to you at your institute.</h4>
      </div>
      <br>   
    <div id="inner-form">
        <%= f.input :email, as: :email, label: 'Email address',
        							      placeholder: 'Institutional address recommended',
                            input_html: { class: 'js-email' } %>
      
      <span class="GLform hidden">
        <%= f.input :institute_name, placeholder: 'Find or create your institute account',
                                     typeahead: Institute.all.pluck(:name) %>
      </span>

      <span class="lab_members_form hidden">
        <%= f.input :lab_email, as: :email, label: "Group leader's email address",
                                placeholder: 'Link your account to your lab',
                                tooltip: ['right', 'Your group leader should create an account before you!'] %>
      </span>

        <%= f.input :password, input_html: { class: 'js-password' } %>
        <%= f.input :password_confirmation, input_html: { class: 'js-password-confirmation' } %>
    </div>
  </div>
      <div>
        <%= f.button :submit, 'Sign up', class: "btn-warning" %>
      </div>
      <br>
    <% end %>
  <%= render 'devise/shared/links' %>
</div>
