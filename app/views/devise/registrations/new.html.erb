<span class="text-center">
	<h2>Registration</h2>
</span>
<br>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),
                              :html => { :class => 'form-vertical'} ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    

    <%= f.collection_select :role, User::ROLES, :to_s, :humanize, required: true %>

    <%= f.input :email, required: true, :autofocus => true, label: "Your email address",
    							placeholder: "Institute addresses only", input_html: { style: 'width: 350px' } %>
    
    <%= f.input :password, required: true, input_html: {:style=> 'width: 350px'} %>
    <%= f.input :password_confirmation, :required => true, input_html: {:style=> 'width: 350px'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
