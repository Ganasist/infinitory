<span class="text-center">
	<h2>Lab member registration</h2>
  <h4>Group leaders<p class="inline-block lead"><%= link_to "Register here", new_request_path, class: "btn btn-warning" %></p></h4></h4>
</span>
<br>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
                              html: { class: 'form-inline register', autocomplete: 'off' } ) do |f| %>
<%= f.error_notification %>
<div class="span5">
  <div class="form-inputs">
    <%= f.collection_select :role, User::ROLES, :to_s, :humanize, prompt: 'Choose your position' %>
    <br>
    <div id="GL_INFO">
      <h4 class="lead">You will be confirmed and a lab account created for you.</h4>
    </div>
    <br>

    <div id="inner-form">
        <%= f.input :email, as: :email, label: 'Email address',
                            input_html: { class: 'js-email' } %>
      
      <span class="GLform">
        <%= f.input :department, placeholder: "Optional", typeahead: Department.all.pluck(:name) %>
      </span>

      <span class="GLform">
        <%= f.input :institute, typeahead: Institute.all.pluck(:name) %>
      </span>

      <span class="lab_members_form">
        <%= f.input :lab_email, as: :email, label: "Group leader's email address",
                                placeholder: 'Link to your lab account',
                                tooltip: ['right', 'Your Group Leader must already have an account!'] %>
      </span>

        <%= f.input :password, input_html: { class: 'js-password' } %>
        <%= f.input :password_confirmation, input_html: { class: 'js-password-confirmation' } %>
    </div>
  </div>

      <div>
        <%= content_for(:the_links) do %>
            I accept the <%= link_to "Terms of Use", page_path('terms') %> 
            and <%=link_to "Privacy Policy", page_path('privacy') %>
        <% end %>
        <%= f.input :terms, as: :boolean, boolean_style: :inline, label: content_for(:the_links)%>

        <%= f.button :submit, 'Sign up', class: "btn-warning" %>
      </div>
      <br>
    <% end %>
  <%= render 'devise/shared/links' %>
</div>
