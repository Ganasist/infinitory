<%= simple_form_for [@institute, @department], :html => { :class => 'form-inline' } do |f| %>
  <%= f.input :name, input_html: { style: 'width: 350px' }, label: "Department name" %>
  <%= f.input :address, :input_html => { style: 'width: 350px', rows: 5 }, as: :text %>
  <%= f.input :url, input_html: { style: 'width: 350px' }, 
  						label: 'Website', placeholder: "Optional" %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              institute_departments_path(@institute), :class => 'btn' %>
<% end %>
