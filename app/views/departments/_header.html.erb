<%- model_class = Department -%>

<div class="page-header">
  <h2>
    <%= "#{@department.name}" %>

    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_institute_path(@institute), :class => 'btn-small btn-success', 'data-no-turbolink' => true %>
  </h2>

  <h3 class="text-muted"><%= "#{ pluralize @institute.departments.count, "department" }" " at " "#{ @institute.name }" %></h3>

    

    <h3 class="text-muted">
      <%= "#{ pluralize @institute.departments.count, "department" }" " and " "#{ pluralize @institute.labs.count, "lab" } registered" %>
    </h3>
    <%= link_to "Add new department", new_institute_department_path(@institute), :class => 'btn' %>
    <%= link_to "Add new lab", new_institute_lab_path(@institute), :class => 'btn' %>
</div>