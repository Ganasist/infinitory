<% cache @department do %>
  <%- model_class = Department -%>
    <div class="page-header">
      <h3>
        <i class="icon-sitemap"></i><%= " #{@department.name}" %>
        <% if current_user.gl? && current_user.department == @department  %>
        <div class="btn-group">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_department_path(@department), :class => 'btn-small btn-success' %>         
        </div>
        <% end %>
      </h3>
      <h5>
        <%= link_to institute_path(@department.institute) do %>
          <i class="icon-building"></i><%= " #{@department.institute.name}" %>
        <% end %>
      </h5>
      <br>
      </div>
<% end %>