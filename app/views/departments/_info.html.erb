<%- model_class = Department -%>
<% if @department.url.present? && @department.icon.present? %>
	<dd class="text-center"><%= link_to image_tag(@department.icon.url(:portrait).html_safe), @department.url, target: "_blank" %></dd>
  <% elsif @department.url.present? && @department.icon.blank? %>
  	<dt><strong>Website</strong></dt>
    <dd><%= link_to "#{@department.url}", @department.url, only_path: false, target: "_blank"  %></dd>
    <br>
  <% end %>
  <br>
  <% if @department.address.present? %>
  <dt><strong><%= model_class.human_attribute_name(:address) %></strong></dt>
  <dd><%= @department.address %></dd>
  <% end %>



  