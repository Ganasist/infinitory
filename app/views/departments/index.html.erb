<%- model_class = Department -%>
<div class="page-header">
  <h3 class="text-muted"><%= "Departments at #{@institute.name}" %></h3>
</div>

  <%= render 'gmap' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
    </tr>
  </thead>
  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= link_to department.name, institute_department_path(@institute, department) %></td>
        <td><%= department.address %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= link_to t('.back', :default => t("helpers.links.back")),
              institute_path(@institute), :class => 'btn', 'data-no-turbolink' => true  %>
   <%= link_to t('.new', :default => "New department"),
              new_institute_department_path(@institute),
              :class => 'btn' %>
