<%- model_class = Department -%>
<% cache @institute do %>
  <div class="page-header">
    <h2><%= "Departments at #{ @institute.name }"  %></h2>
    <h3 class="text-muted"><%= "#{ pluralize @institute.departments.count, "department" } registered" %></h3>
    <br>
      <div class="btn-group">
        <%= link_to t('.new', :default => "Add department"),
                  new_institute_department_path(@institute),
                  :class => 'btn-large' %>
      </div>
  </div>
<% end %>

<div class="span3">
  <%= render 'department' %>
</div>

<div class="span8">
  <%= render 'gmap' %>
</div>

 


