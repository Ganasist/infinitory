<% if @lab.comments.present? %>
  <h3>Notifications</h3><br>
    <table class="table-striped">
    	<% @comments.each do |comment| %>     
			  <tr class="lab_notifications">
			    <strong><%= time_ago_in_words(comment.created_at) %> ago</strong><br>
			    <%= comment.comment %>
			  </tr>
			  <hr>
			<% end %>
		</table>
<% end %>