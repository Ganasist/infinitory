<%- model_class = Lab -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:department_id) %>:</strong></dt>
  <dd><%= @lab.department_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:institute_id) %>:</strong></dt>
  <dd><%= @lab.institute_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_leader) %>:</strong></dt>
  <dd><%= @lab.group_leader %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_leader_email) %>:</strong></dt>
  <dd><%= @lab.group_leader_email %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              labs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lab_path(@lab), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lab_path(@lab),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
