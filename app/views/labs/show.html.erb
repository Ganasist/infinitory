<%- model_class = Lab -%>
<div class="page-header">
  <h1>The <%= "#{@lab.name}" %> Lab</h1>
</div>

<dl class="dl-horizontal table-striped">
  <dt><strong><%= model_class.human_attribute_name(:department) %>:</strong></dt>
  <dd><%= link_to "#{@lab.department.name}", department_path(@lab.department) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:institute_id) %>:</strong></dt>
  <dd><%= link_to "#{@lab.institute.name}", institute_path(@lab.institute) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:group_leader) %>:</strong></dt>
  <dd><%= link_to "#{@lab.gl.fullname}", user_path(@lab.gl) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              institute_path(@lab.institute), :class => 'btn'  %>

  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lab_path(@lab), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lab_path(@lab),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm",
                          :default => 'Are you sure you want to destroy the lab and all of its contents?')) },
              :class => 'btn btn-danger' %>
</div>
