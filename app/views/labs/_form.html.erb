<%= simple_form_for @lab, defaults: { input_html: { style: 'width: 350px' } },
                          html: { :class => 'form-vertical', multipart: true } do |f| %>

<%= f.error_notification %>

  <div class="row">
    <div class="span4">
      
    	<%= f.input :name, label: "Lab name", placeholder: "Group leader's name is recommended" %>
      <%= f.input :room, :input_html => { rows: 4 } %>
      <%= f.input :url, label: 'Lab website', placeholder: "Optional" %>
    </div>
    <div class="span6 pull-right">
      <label>Lab picture</label><br>
      <%= f.input :remote_icon_url, placeholder: "Enter image URL", label: false %>
      <% if @lab.icon? %>        
        <%= image_tag(@lab.icon_url(:main)) %>
        <p>Remove picture? <%= f.check_box :remove_icon %></p>       
      <% end %>
      
      <h4>or</h4>
      <%= f.input :icon, label: false %>  
      <%= f.hidden_field :icon_cache %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lab_path(@lab), :class => 'btn' %>
  </div>
<% end %>